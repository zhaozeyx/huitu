    <!-- Dialog button -->
    <style name="dialog_button_style">
        <item name="android:layout_width">fill_parent</item>
        <item name="android:layout_height">48dp</item>
        <item name="android:layout_weight">1</item>
        <item name="android:textColor">@color/font_color_primary</item>
        <item name="android:textSize">@dimen/font_size_large</item>
        <item name="android:gravity">center</item>
    </style>

    <!-- Dialog message text -->
    <style name="dialog_message_text_style" parent="Widget.App.TextView.Medium.Primary">
        <item name="android:layout_width">fill_parent</item>
        <item name="android:padding">@dimen/margin_large</item>
    </style>

    <!-- Dialog title -->
    <style name="dialog_title_style" parent="Widget.App.TextView.Large.Primary">
        <item name="android:singleLine">true</item>
        <item name="android:ellipsize">end</item>
        <item name="android:gravity">left|center_vertical</item>
        <item name="android:textStyle">bold</item>
    </style>

    <!-- Dialog checkbox -->
    <style name="dialog_checkbox_style" parent="Widget.App.TextView.Large.White">
        <item name="android:layout_marginLeft">13.3dip</item>
        <item name="android:layout_marginRight">13.3dip</item>
        <item name="android:paddingLeft">25dip</item>
        <item name="android:gravity">top</item>
        <item name="android:layout_gravity">center</item>
    </style>

    <!-- Dialog list item title -->
    <style name="dialog_list_item_title_style">
        <item name="android:layout_width">fill_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textColor">@color/font_color_primary</item>
        <item name="android:textSize">15sp</item>
        <item name="android:paddingLeft">13.3dip</item>
        <item name="android:singleLine">true</item>
        <item name="android:ellipsize">end</item>
        <item name="android:gravity">left|center_vertical</item>
    </style>

    <!-- Dialog list item sub title -->
    <style name="dialog_list_item_sub_title_style" parent="Widget.App.TextView.Smallest.White">
        <item name="android:layout_width">fill_parent</item>
        <item name="android:paddingLeft">13.3dip</item>
        <item name="android:singleLine">true</item>
        <item name="android:ellipsize">end</item>
        <item name="android:gravity">left|top</item>
    </style>


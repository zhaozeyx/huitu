<resources>

    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="android:windowBackground">@color/app_bg_color</item>
    </style>

    <!-- TextAppearance -->
    <style name="TextAppearance.App" parent="TextAppearance.AppCompat">
        <item name="android:textSize">@dimen/font_size_large</item>
    </style>

    <style name="TextAppearance.App.Inverse">
        <item name="android:textColor">@color/font_color_white</item>
        <item name="android:textSize">@dimen/font_size_large</item>
    </style>

    <style name="TextAppearance.App.Button" parent="TextAppearance.App">
        <item name="android:textColor">@color/font_color_white</item>
    </style>

    <style name="TextAppearance.App.Button.Inverse">
        <item name="android:textColor">?android:attr/textColorSecondary</item>
    </style>

    <!-- Widgets -->
    <style name="Widget.App.TextView" parent="android:Widget.TextView">
        <item name="android:textAppearance">?android:textAppearance</item>
        <!-- TODO 去掉 android:layout_height 和 android:layout_width -->
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_width">wrap_content</item>
    </style>

    <!-- L红色按钮 -->
    <!-- 作为默认按钮样式，其他按钮样式均是在其基础上拓展的 -->
    <!-- Note: 修改这个时，记得同时修改value-v21中对应的style -->
    <style name="Widget.App.Button" parent="Widget.AppCompat.Button">
        <item name="android:textAppearance">?android:attr/textAppearanceButton</item>
        <item name="android:minHeight">36dp</item>
        <item name="android:minWidth">88dp</item>
    </style>

    <!-- L蓝色按钮-->
    <style name="Widget.App.Button.Blue"></style>

    <!-- L中间透明带描边的按钮 -->
    <style name="Widget.App.Button.Transparent">
        <item name="android:textAppearance">@style/TextAppearance.App.Button.Inverse</item>
    </style>

    <!-- M红色按钮-->
    <style name="Widget.App.Button.Medium">
        <item name="android:textSize">@dimen/font_size_medium</item>
        <item name="android:minHeight">30dp</item>
        <item name="android:minWidth">88dp</item>
    </style>

    <!-- M蓝色按钮-->
    <style name="Widget.App.Button.Medium.Blue"></style>

    <!-- M中间透明带描边的按钮-->
    <style name="Widget.App.Button.Medium.Transparent">
        <item name="android:textAppearance">@style/TextAppearance.App.Button.Inverse</item>
    </style>

    <!-- S红色按钮-->
    <style name="Widget.App.Button.Small">
        <item name="android:textSize">@dimen/font_size_small</item>
        <item name="android:minHeight">24dp</item>
        <item name="android:minWidth">48dp</item>
        <item name="android:paddingLeft">8dp</item>
        <item name="android:paddingRight">8dp</item>
    </style>

    <!-- S蓝色按钮-->
    <style name="Widget.App.Button.Small.Blue"></style>

    <!-- S中间透明带描边的按钮-->
    <style name="Widget.App.Button.Small.Transparent">
        <item name="android:textAppearance">@style/TextAppearance.App.Button.Inverse</item>
    </style>

    <style name="Widget.App.ListView" parent="Widget.AppCompat.ListView">
        <item name="android:listSelector">?listChoiceBackgroundIndicator</item>
        <item name="android:cacheColorHint">@android:color/transparent</item>
        <item name="android:dividerHeight">@dimen/line_size</item>
    </style>

    <style name="Widget.App.ListView.DropDown" parent="Widget.AppCompat.Light.ListView.DropDown">
        <item name="android:listSelector">?listChoiceBackgroundIndicator</item>
        <item name="android:dividerHeight">@dimen/line_size</item>
    </style>

    <style name="Widget.App.Spinner.DropDown" parent="Widget.AppCompat.Spinner.DropDown">
        <item name="android:spinnerMode">dropdown</item>
        <item name="android:dropDownWidth">124dp</item>
        <item name="android:dropDownVerticalOffset">1dp</item>
    </style>

    <style name="Widget.App.ProgressBar" parent="Widget.AppCompat.ProgressBar"></style>

    <style name="Widget.App.PageIndicator" parent="android:Widget">
        <!-- <item name="android:background">@drawable/bg_page_indicator</item> -->
        <item name="android:gravity">center</item>
        <item name="android:paddingLeft">8dp</item>
        <item name="android:paddingRight">8dp</item>
    </style>

